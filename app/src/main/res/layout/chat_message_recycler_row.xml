<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp">

    <!-- LEFT CHAT (Received) -->
    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:background="@drawable/bg_chat_left"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Message text -->
        <TextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp" />

        <!-- Image -->
        <ImageView
            android:id="@+id/left_chat_message_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="@drawable/bg_image_placeholder" />

        <!-- View Once -->
        <LinearLayout
            android:id="@+id/view_once_layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_view_once" />

            <TextView
                android:id="@+id/view_once_txt_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textColor="#999"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/left_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="12:45 PM"
            android:textColor="#888"
            android:textSize="12sp"
            android:gravity="end" />

    </LinearLayout>

    <!-- RIGHT CHAT (Sent) -->
    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:background="@drawable/bg_chat_right"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Message text -->
        <TextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:lineSpacingExtra="2dp" />

        <!-- Image -->
        <ImageView
            android:id="@+id/right_chat_message_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="@drawable/bg_image_placeholder" />

        <!-- View Once -->
        <LinearLayout
            android:id="@+id/view_once_layout_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_view_once" />

            <TextView
                android:id="@+id/view_once_txt_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textColor="#E0E0E0"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Timestamp -->
        <TextView
            android:id="@+id/right_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="12:45 PM"
            android:textColor="#DDD"
            android:textSize="12sp"
            android:gravity="end" />

    </LinearLayout>

</RelativeLayout>
